{
  "name": "react-trophies",
  "version": "1.3.0",
  "description": "Comprehensive achievement and trophy system for React apps with sound effects, notifications, theming, and visual components.",
  "repository": {
    "type": "git",
    "url": "https://github.com/ts2gamer22/react-trophies"
  },
  "keywords": [
    "react",
    "badge",
    "achievement"
  ],
  "main": "dist/cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "scripts",
    "trophy-guidelines"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/cjs.js"
    },
    "./setup": "./scripts/post-install.js"
  },
  "sideEffects": false,
  "bin": {
    "react-trophies-setup": "./scripts/post-install.js"
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:types": "tsc --noEmit",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "deploy": "npm run build && npm publish",
    "storybook": "storybook dev -p 6006",
    "postinstall": "node ./scripts/post-install.js",
    "build-storybook": "storybook build"
  },
  "author": "ts2gamer22",
  "license": "MIT",
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.2",
    "@storybook/addon-essentials": "^8.6.8",
    "@storybook/addon-interactions": "^8.6.8",
    "@storybook/addon-links": "^8.6.8",
    "@storybook/addon-onboarding": "^8.6.8",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.6.8",
    "@storybook/react": "^8.6.8",
    "@storybook/react-webpack5": "^8.6.8",
    "@storybook/test": "^8.6.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-toastify": "^4.0.2",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "react-toastify": "^9.0.0",
    "react-use": "^17.6.0",
    "rollup": "^4.19.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "storybook": "^8.6.8",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-confetti": "^6.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-toastify": "^9.0.0",
    "react-use": "^17.6.0",
    "zustand": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "sonner": "^2.0.5"
  }
}
